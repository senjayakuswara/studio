
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- ATURAN AKSES SERVER / PUBLIK (TANPA LOGIN) ---

    // Izinkan server notifikasi untuk membaca dan menulis ke antrean notifikasi.
    // Pengguna yang login (admin) juga bisa menulis (untuk membuat tugas dari klien).
    match /notification_queue/{jobId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Izinkan siapa saja untuk MEMBACA data untuk membuat laporan
    match /students/{studentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /classes/{classId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /attendance/{recordId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /holidays/{holidayId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Aturan untuk Pengaturan (Settings) ---
    match /settings/{settingId} {
      // Izinkan siapa saja membaca pengaturan (dibutuhkan oleh server dan klien)
      allow read: if true;
      // Izinkan MENULIS hanya jika pengguna adalah admin (request.auth != null)
      allow write: if request.auth != null;
    }
  }
}
