
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Aturan dasar: Hanya admin yang terautentikasi yang dapat membaca dan menulis semua data.
    // Ini adalah jaring pengaman utama.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // --- PENGECUALIAN AKSES PUBLIK ---
    // Aturan di bawah ini memberikan izin baca spesifik untuk fitur yang dapat diakses publik,
    // seperti halaman login dan webhook Telegram, tanpa membahayakan keamanan data lainnya.
    
    // Izinkan siapa saja membaca konfigurasi aplikasi untuk styling halaman login.
    match /settings/appConfig {
        allow get: if true;
    }
    
    // Izinkan webhook/bot Telegram untuk membaca data yang diperlukannya untuk validasi.
    match /settings/telegramConfig {
        allow get: if true;
    }
    match /settings/telegramState {
        // Hanya bot yang bisa membaca/menulis state 'lastUpdateId'.
        allow read, write: if true;
    }
    match /classes/{classId} {
        allow get: if true;
    }
    match /students/{studentId} {
        // Izinkan bot membaca data siswa.
        allow get: if true;
        // PENTING: Izinkan pembaruan HANYA pada field `parentChatId` oleh bot.
        // Ini mencegah bot mengubah data sensitif lainnya seperti nama atau NISN.
        allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['parentChatId']);
    }
  }
}
