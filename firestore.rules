
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- ATURAN AKSES SERVER / PUBLIK (TANPA LOGIN) ---

    // Izinkan server notifikasi untuk membaca dan menulis ke antrean notifikasi.
    match /notification_queue/{jobId} {
      allow read, write: if true;
    }

    // Izinkan server notifikasi untuk mengelola pemicu manual.
    match /manual_triggers/{triggerId} {
      allow create: if request.auth != null; // Admin creates trigger
      allow read, update, delete: if true;   // Server processes it
    }
    
    // Izinkan server (dan siapa saja) untuk MEMBACA data untuk membuat laporan
    match /students/{studentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /classes/{classId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /attendance/{recordId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /holidays/{holidayId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Aturan untuk Pengaturan (Settings) ---
    match /settings/{settingId} {
      // Izinkan siapa saja membaca pengaturan (dibutuhkan oleh server dan klien)
      allow read: if true;
      
      // Izinkan MENULIS hanya jika:
      // 1. Pengguna adalah admin (request.auth != null)
      // ATAU
      // 2. Dokumen yang dituju adalah 'monthlyRecapStatus' (untuk server)
      allow write: if request.auth != null || settingId == 'monthlyRecapStatus';
    }
  }
}
