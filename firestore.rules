
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Disallow all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow any authenticated user to read and write to all collections.
    // This is secure for this app because only one admin user exists.
    // All data access from the app happens when the admin is logged in.
    match /settings/{settingId} {
       allow read, write: if request.auth != null;
    }
    match /classes/{classId} {
       allow read, write: if request.auth != null;
    }
    match /students/{studentId} {
       allow read, write: if request.auth != null;
    }
     match /attendance/{attendanceId} {
       allow read, write: if request.auth != null;
    }
  }
}
