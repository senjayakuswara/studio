
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Izinkan siapa saja untuk menulis ke path rekap bulanan.
    // Ini diperlukan agar server notifikasi (yang berjalan anonim) bisa mengunggah PDF.
    // Bacaan dibatasi hanya untuk pengguna terautentikasi (admin),
    // namun URL unduhan yang dibuat akan dapat diakses publik untuk waktu terbatas.
    match /monthly-recaps/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }
  }
}
